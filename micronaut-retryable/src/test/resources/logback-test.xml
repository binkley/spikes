<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi>

        <encoder>
            <!-- @formatter:off -->
            <pattern>%cyan(%d{HH:mm:ss.SSS}) %gray([%thread]) %highlight(%-5level) %magenta(%logger{36}) - %msg%n</pattern>
            <!-- @formatter:on -->
        </encoder>
    </appender>

    <!-- TRACE for Micronaut Data to support testing of queries;
         output does *not* appear on console. -->
    <logger name="io.micronaut.data" level="TRACE"/>
    <logger name="io.micronaut.iop" level="TRACE"/>
    <logger name="io.micronaut.retry.intercept" level="TRACE"/>

    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
